/ {
    chosen {
        zmk,physical-layout = &default_layout;
        zmk,kscan = &kscan;
    };

    kscan: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        diode-direction = "col2row";
        wakeup-source;

        row-gpios = <&gpio0 5 GPIO_ACTIVE_LOW>,  // D0
                    <&gpio0 11 GPIO_ACTIVE_LOW>,  // D1
                    <&gpio0 4 GPIO_ACTIVE_LOW>,  // D2
                    <&gpio0 12  GPIO_ACTIVE_LOW>,  // D3
                    <&gpio0 29 GPIO_ACTIVE_LOW>;  // D4

        col-gpios = <&gpio0 2  GPIO_ACTIVE_LOW>,  // D5
                    <&gpio0 3  GPIO_ACTIVE_LOW>,  // D6
                    <&gpio1 28  GPIO_ACTIVE_LOW>,  // D7
                    <&gpio0 13 GPIO_ACTIVE_LOW>,  // D8
                    <&gpio0 14 GPIO_ACTIVE_LOW>,  // D9
                    <&gpio1 15 GPIO_ACTIVE_LOW>;  // D10
    };

    default_layout: default_transform {
        compatible = "zmk,matrix-transform";
        rows = <5>;
        columns = <6>;

        map = <
            RC(0, 0) RC(0, 1) RC(0, 2) RC(0, 3) RC(0, 4) RC(0, 5)
            RC(1, 0) RC(1, 1) RC(1, 2) RC(1, 3) RC(1, 4) RC(1, 5)
            RC(2, 0) RC(2, 1) RC(2, 2) RC(2, 3) RC(2, 4) RC(2, 5)
            RC(3, 0) RC(3, 1) RC(3, 2) RC(3, 3) RC(3, 4) RC(3, 5)
            RC(4, 0) RC(4, 1) RC(4, 2) RC(4, 3) RC(4, 4) RC(4, 5)
        >;
    };
};
